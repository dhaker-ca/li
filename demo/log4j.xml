<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>
	<root>
		<level value="TRACE" />
		<appender-ref ref="CONSOLE_APPENDER" />
	</root>

	<!-- <logger name="li"> <level value="TRACE" /> <appender-ref ref="CONSOLE_APPENDER" /> </logger> <logger name="httl"> <level value="TRACE" /> <appender-ref ref="CONSOLE_APPENDER" /> </logger> <logger name="freemarker"> <level value="TRACE" /> <appender-ref ref="CONSOLE_APPENDER" /> </logger> -->

	<appender name="CONSOLE_APPENDER" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="LOG4J:[%t] %r %p %d %c %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="FATAL" />
			<param name="LevelMin" value="TRACE" />
		</filter>
	</appender>

	<appender name="FILE_APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/li/logs/all" />
		<param name="DatePattern" value="'-'yyyy-MM-dd'.log'" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="LOG4J:[%t] %r %p %d %c %m%n" />
		</layout>
	</appender>
</log4j:configuration>


